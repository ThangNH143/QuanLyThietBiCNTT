<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Gán thiết bị cho phòng ban</title>

  <%- include('../partials/header') %>

<div class="container mt-4">
  <h2 class="mb-4">Gán thiết bị nơi sử dụng</h2>

  <!-- Bộ lọc -->
  <form id="filterDeviceAssignmentForm" class="row g-2 mb-3">
    <div class="col-md-4"><input name="deviceName" class="form-control" placeholder="Tên thiết bị" /></div>
    <div class="col-md-4"><input name="deptName" class="form-control" placeholder="Phòng ban sử dụng" /></div>
    <div class="col-md-4">
      <select name="status" class="form-select">
        <option value="active">Đang sử dụng</option>
        <option value="revoked">Đã thu hồi</option>
        <option value="all">Tất cả</option>
      </select>
    </div>
    <div class="col-md-12 text-end">
      <button class="btn btn-primary">Tìm</button>
      <button type="button" id="resetDeviceAssignmentFilter" class="btn btn-secondary ms-2">Reset</button>
      <button type="button" id="btnOpenCreateAssignmentModal" class="btn btn-success ms-2">➕ Gán thiết bị</button>
    </div>
  </form>

  <!-- Bảng gán thiết bị -->
   <div class="card">
    <div class="card-body p-0">
      <table class="table table-hover mb-0">
        <div id="paginationContainer" class="mt-3">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Thiết bị</th>
              <th>Phòng ban</th>
              <th>Ngày bắt đầu</th>
              <th>Ngày kết thúc</th>
              <th>Ghi chú</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody id="assignmentTableBody">
            <!-- Dữ liệu load qua AJAX -->
          </tbody>
        </div>
      </table>      
    </div>
    <div class="card-footer clearfix">
      <!-- Container cho phân trang -->
      <div id="assignmentPagination" class="d-flex justify-content-center"></div>
    </div>
  </div>
